-- Tabel Admin
CREATE TABLE Admin (
  id_admin INT PRIMARY KEY,
  username VARCHAR(50),
  password VARCHAR(50),
  status ENUM('admin', 'member')
);

-- Tabel Member
CREATE TABLE Member (
  id_member INT PRIMARY KEY,
  username VARCHAR(50),
  password VARCHAR(50),
  status ENUM('admin', 'member')
);

-- Tabel Jadwal
CREATE TABLE Jadwal (
  id_jadwal INT PRIMARY KEY,
  mata_pelajaran VARCHAR(50),
  hari VARCHAR(50),
  waktu VARCHAR(50)
);

-- Tabel Tugas
CREATE TABLE Tugas (
  id_tugas INT PRIMARY KEY,
  mata_pelajaran VARCHAR(50),
  deskripsi TEXT,
  deadline DATE
);

-- Tabel Jadwal_Piket
CREATE TABLE Jadwal_Piket (
  id_jadwal_piket INT PRIMARY KEY,
  hari VARCHAR(50),
  username VARCHAR(50),
  FOREIGN KEY (username) REFERENCES Member(username)
);

-- Tabel Pesan
CREATE TABLE Pesan (
  id_pesan INT PRIMARY KEY,
  pengirim_username VARCHAR(50),
  penerima_username VARCHAR(50),
  isi_pesan TEXT,
  FOREIGN KEY (pengirim_username) REFERENCES Member(username),
  FOREIGN KEY (penerima_username) REFERENCES Member(username)
);
